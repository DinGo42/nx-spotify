{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["node"],
    "paths": {
      "@spotify/*": ["apps/next-frontend/src/*"],
      "@spotify/icons": ["apps/next-frontend/public/svg"],
      "@bd": ["packages/bd/src/index.ts"],
      "@shared": ["packages/shared/src/index.ts"],
      "@web-shared": ["packages/web-shared/src/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../apps/nx-spotify/.next/types/**/*.ts",
    "../../dist/apps/nx-spotify/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
